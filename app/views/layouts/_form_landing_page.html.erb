<%=  simple_form_for :bike, url: bikes_path, method: 'GET', :html => { :class => 'form-inline' } do |f|  %>
  <%= f.input :city, name: 'city', value: '', placeholder: 'City', label: false %>
  <%= f.input :lat, as: :hidden %>
  <%= f.input :lng, as: :hidden %>
  <%= f.input :start_date, as: :string, input_html: { class: 'datepicker label-margin' },placeholder: 'Start Date', label: false %>

  <%= f.input :end_date, as: :string, input_html: { class: 'datepicker label-margin' },placeholder: 'End Date', label: false %>
  <%= f.submit "Find a bike", class: "btn btn-warning" %>
<% end %>
